<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

   <Button
       android:id="@+id/buttonEditWebsite"
       android:layout_width="380dp"
       android:layout_height="64dp"
       android:layout_alignParentBottom="true"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginBottom="20dp"
       android:text="@string/edit_website"
       android:textColor="@color/white"
       android:textColorHint="@color/white"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/editWebsiteDescription"
       app:layout_constraintVertical_bias="1.0" />

   <EditText
       android:id="@+id/editsWebsiteName"
       android:layout_width="0dp"
       android:layout_height="@dimen/height_enter_field"
       android:layout_marginTop="4dp"
       android:ems="10"
       android:inputType="text"
       android:text=""
       android:autofillHints="text"
       android:hint="@string/edit_website_name"
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/WebsiteNameTitle" />

   <EditText
       android:id="@+id/editWebsiteLogin"
       android:layout_width="0dp"
       android:layout_height="@dimen/height_enter_field"
       android:layout_marginTop="4dp"
       android:autofillHints="emailAddress"
       android:ems="10"
       android:hint="@string/edit_website_login"
       android:inputType="text"
       android:text=""
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/WebsiteLoginTitle" />

   <CheckBox
       android:id="@+id/showEditPasswordCheckBox"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentEnd="true"
       android:layout_marginEnd="8dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="@+id/WebsitePasswordTitle"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.317" />

   <EditText
       android:id="@+id/editWebsitePassword"
       android:layout_width="0dp"
       android:layout_height="@dimen/height_enter_field"
       android:layout_marginTop="4dp"
       android:autofillHints="password"
       android:ems="10"
       android:hint="@string/edit_website_pass"
       android:inputType="textPassword"
       android:text=""
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/WebsitePasswordTitle" />


   <EditText
       android:id="@+id/editWebsiteURL"
       android:layout_width="0dp"
       android:layout_height="@dimen/height_enter_field"
       android:layout_marginTop="4dp"
       android:autoLink="web"
       android:autofillHints="webDomainName"
       android:ems="10"
       android:hint="@string/edit_website_url"
       android:inputType="textUri"
       android:text=""
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/WebsiteURLTitle" />

   <EditText
       android:id="@+id/editWebsiteDescription"
       android:layout_width="0dp"
       android:layout_height="@dimen/height_enter_field"
       android:layout_marginTop="4dp"
       android:autofillHints="text"
       android:ems="10"
       android:hint="@string/edit_website_description"
       android:inputType="text"
       android:text=""
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/WebsiteDescriptionTitle" />

   <TextView
       android:id="@+id/WebsiteNameTitle"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:text="@string/website_title"
       android:textColor="@color/white"
       android:textSize="@dimen/text_size_title"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/WebsiteLoginTitle"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:text="@string/login_title"
       android:textSize="@dimen/text_size_title"
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/editsWebsiteName" />

   <TextView
       android:id="@+id/WebsitePasswordTitle"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:text="@string/password_title"
       android:textSize="@dimen/text_size_title"
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/editWebsiteLogin" />

   <TextView
       android:id="@+id/WebsiteURLTitle"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:text="@string/url_title"
       android:textSize="@dimen/text_size_title"
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/editWebsitePassword" />

   <TextView
       android:id="@+id/WebsiteDescriptionTitle"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:text="@string/description_title"
       android:textSize="@dimen/text_size_title"
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/editWebsiteURL" />

</androidx.constraintlayout.widget.ConstraintLayout>